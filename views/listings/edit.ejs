<% layout("/layouts/boilerplate") %>


    <div class="row mt-3">
        <div class="col-8 offset-2">

    
    <h3>Edit your Listing</h3> <br>
    

    <form method="post" action="/listings/<%= list._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">

        
        <div class="mb-3">
            <lable for="title" class="form-label">Title</lable>
            <input type="text" class="form-control" name="listing[title]" value="<%= list.title %>" required >
        </div>

        
        <div class="mb-3">
            <lable for="description" class="form-label">Description</lable>
            <textarea name="listing[description]" class="form-control" required > <%= list.description %> </textarea>

            <div class="invalid-feedback">
                Please enter a short description
            </div>
        </div> 

        <div class="mb-3">
            Original Listing Image <br>
            <img src="<%= originalImageUrl %>">
        </div>

        <div class="mb-3">
            <lable for="image" class="form-label">Upload New Image</lable>
            <input type="file" name="listing[image]" class="form-control" > 
        </div>

        <div class="row">
            <div class="mb-3 col-md-4">
                <lable for="price" class="form-label">Price</lable>
                <input type="number" name="listing[price]" value="<%= list.price %>" class="form-control" required> 

                <div class="invalid-feedback">
                    Price should be valid
                </div>
            </div>
            
            <div class="mb-3 col-md-8">
                <lable for="country" class="form-label">Country</lable>
                <input type="text" name="listing[country]" value="<%= list.country %>" class="form-control" required>
                
                <div class="invalid-feedback">
                    Country name should be valid
                </div>
            </div>
        </div>


        <div class="mb-3">
            <lable for="location" class="form-label">Location</lable>
            <input type="text" name="listing[location]" value="<%= list.location %>" class="form-control" required> 

            <div class="invalid-feedback">
                Location should be valid
            </div>
        </div> <br><br>
        
        <button class="btn btn-dark mt-3 add-btn">Edit</button>
        <br><br>
        </div>
    </div>
    </form>

    
